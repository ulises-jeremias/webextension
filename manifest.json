{
  "manifest_version": 2,
  "name": "webextension",
  "version": "1.0.0",

  "icons": {
    "48": "resources/assets/icons/gscholar-48.png"
  },

  "permissions": [
    "<all_urls>", "activeTab", "contextMenus", "webRequest", "webRequestBlocking"
  ],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "content_script/content.js"
    ],
    "css": ["resources/assets/stylesheets/styles.css"]
  }],

  "background": {
    "matches": [":///*"],
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "background/background.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "16": "resources/assets/icons/gscholar-16.png",
      "32": "resources/assets/icons/gscholar-32.png"
    }
  }

}